<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PerfectPay.MainPage"
             BackgroundColor="#323232">

    <ContentPage.Resources>
        <Color x:Key="PrimaryColor">#FF6200EE</Color>
        <Color x:Key="SecondaryColor">#FF03DAC5</Color>
        <Color x:Key="BackgroundColor">#323232</Color>
        <Color x:Key="TextColor">#FFFFFF</Color>
    </ContentPage.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <!--First 30 % of the screen-->
            <RowDefinition Height=".3*">
                
            </RowDefinition>

            <!--Second 70 % of the screen-->
            <RowDefinition Height=".7*">
                
            </RowDefinition>
        </Grid.RowDefinitions>
        <Border BackgroundColor="{StaticResource BackgroundColor}" Padding="10" StrokeThickness="4" StrokeShape="RoundRectangle 20,20,20,20">
            
        </Border>
    </Grid>

    
</ContentPage>
